<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Display CRUD</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        button.btn-edit {
            border-radius: 3px;
            border: none;
            outline: none;
            background: orange;
            width: 60px;
            height: 25px;
        }

        button.btn-delete {
            border-radius: 3px;
            border: none;
            outline: none;
            background: purple;
            width: 60px;
            height: 25px;
        }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
        </tr>

        <% for(let i=0; i < dataTable.length; i++) {%>
            <tr>
                <td> <%= dataTable[i].firstName %> </td>
                <td> <%= dataTable[i].lastName %> </td>
                <td> <%= dataTable[i].email %> </td>
                <td> <%= dataTable[i].address %> </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>">Delete</a>
                </td>
            </tr>
        <% } %>

    </table>
</body>
</html>